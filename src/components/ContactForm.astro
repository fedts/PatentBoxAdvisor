---
// Executive Contact Form Component - Corporate Grade
---

<div style="background: white; border-radius: 1rem; box-shadow: 0 10px 25px rgba(0,0,0,0.1); border: 1px solid #e5e7eb; padding: 2rem; color: black; max-width: 32rem; margin: 0 auto;">
  
  <!-- Form Header -->
  <div style="margin-bottom: 2rem;">
    <div style="display: inline-flex; align-items: center; padding: 0.25rem 0.75rem; background: #eff6ff; color: #1d4ed8; font-size: 0.75rem; font-weight: 500; text-transform: uppercase; border: 1px solid #bfdbfe; border-radius: 9999px; margin-bottom: 1rem;">
      Valutazione Strategica
    </div>
    <h3 style="font-size: 1.25rem; font-weight: 600; color: black; margin-bottom: 0.5rem;">Richiedi Consulenza Patent Box</h3>
    <p style="font-size: 0.875rem; color: #374151;">Riservato a CFO, Tax Directors e C-Level aziende >€50M fatturato</p>
  </div>
  
  <form id="contactForm" style="display: flex; flex-direction: column; gap: 1.5rem;">
    <!-- Executive Details -->
    <div style="display: grid; grid-template-columns: repeat(2, 1fr); gap: 1rem;">
      <div>
        <label style="display: block; font-size: 0.875rem; font-weight: 500; color: black; margin-bottom: 0.5rem;">Nome *</label>
        <input 
          type="text" 
          name="nome"
          required 
          style="width: 100%; padding: 0.75rem 1rem; border: 1px solid #d1d5db; border-radius: 0.5rem; font-size: 0.875rem; color: black; background: white;" 
        />
      </div>
      <div>
        <label style="display: block; font-size: 0.875rem; font-weight: 500; color: black; margin-bottom: 0.5rem;">Cognome *</label>
        <input 
          type="text" 
          name="cognome"
          required 
          style="width: 100%; padding: 0.75rem 1rem; border: 1px solid #d1d5db; border-radius: 0.5rem; font-size: 0.875rem; color: black; background: white;" 
        />
      </div>
    </div>
    
    <div>
      <label style="display: block; font-size: 0.875rem; font-weight: 500; color: black; margin-bottom: 0.5rem;">Email Aziendale *</label>
      <input 
        type="email" 
        name="email"
        required 
        style="width: 100%; padding: 0.75rem 1rem; border: 1px solid #d1d5db; border-radius: 0.5rem; font-size: 0.875rem; color: black; background: white;" 
      />
    </div>
    
    <div style="display: grid; grid-template-columns: repeat(2, 1fr); gap: 1rem;">
      <div>
        <label style="display: block; font-size: 0.875rem; font-weight: 500; color: black; margin-bottom: 0.5rem;">Azienda *</label>
        <input 
          type="text" 
          name="azienda"
          required 
          style="width: 100%; padding: 0.75rem 1rem; border: 1px solid #d1d5db; border-radius: 0.5rem; font-size: 0.875rem; color: black; background: white;" 
        />
      </div>
      <div>
        <label style="display: block; font-size: 0.875rem; font-weight: 500; color: black; margin-bottom: 0.5rem;">Ruolo *</label>
        <select 
          name="ruolo"
          required 
          style="width: 100%; padding: 0.75rem 1rem; border: 1px solid #d1d5db; border-radius: 0.5rem; font-size: 0.875rem; color: black; background: white;"
        >
          <option value="">Seleziona ruolo</option>
          <option value="cfo">CFO</option>
          <option value="tax-director">Tax Director</option>
          <option value="ceo">CEO</option>
          <option value="finance-director">Finance Director</option>
          <option value="altro-c-level">Altro C-Level</option>
        </select>
      </div>
    </div>
    
    <div>
      <label style="display: block; font-size: 0.875rem; font-weight: 500; color: black; margin-bottom: 0.5rem;">Fatturato Annuo *</label>
      <select 
        name="fatturato"
        required 
        style="width: 100%; padding: 0.75rem 1rem; border: 1px solid #d1d5db; border-radius: 0.5rem; font-size: 0.875rem; color: black; background: white;"
      >
        <option value="">Seleziona fatturato</option>
        <option value="50m-100m">€50M - €100M</option>
        <option value="100m-250m">€100M - €250M</option>
        <option value="250m-500m">€250M - €500M</option>
        <option value="500m-1b">€500M - €1B</option>
        <option value="1b+">Oltre €1B</option>
      </select>
    </div>
    
    <div>
      <label style="display: block; font-size: 0.875rem; font-weight: 500; color: black; margin-bottom: 0.5rem;">Asset Immateriali Rilevanti</label>
      <textarea 
        name="descrizione"
        placeholder="Descrivi brevemente: software proprietari, brevetti, design registrati, marchi..." 
        style="width: 100%; padding: 0.75rem 1rem; border: 1px solid #d1d5db; border-radius: 0.5rem; font-size: 0.875rem; color: black; background: white; height: 6rem; resize: vertical;"
      ></textarea>
    </div>
    
    <!-- Regulatory Notice -->
    <div style="background: #eff6ff; border: 1px solid #bfdbfe; border-radius: 0.5rem; padding: 1rem;">
      <div style="display: flex; align-items: flex-start;">
        <svg style="height: 1rem; width: 1rem; color: #2563eb; margin-right: 0.5rem; margin-top: 0.125rem; flex-shrink: 0;" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
        </svg>
        <div style="font-size: 0.875rem; color: #1e3a8a;">
          <strong>Scadenza istanza:</strong> 29 gennaio 2025 - D.L. 50/2017
        </div>
      </div>
    </div>
    
    <div style="font-size: 0.75rem; color: #374151;">
      <label style="display: flex; align-items: flex-start;">
        <input 
          type="checkbox" 
          name="privacy"
          required 
          style="margin-top: 0.25rem; margin-right: 0.5rem; border-radius: 0.25rem;" 
        />
        <span>Accetto la <a href="/privacy" style="color: #2563eb; text-decoration: underline; font-weight: 500;">Privacy Policy</a> e autorizzo il trattamento dei dati per finalità di consulenza fiscale specializzata.</span>
      </label>
    </div>
    
    <button 
      type="submit" 
      style="width: 100%; background: #2563eb; color: white; padding: 1rem; font-size: 0.875rem; font-weight: 500; border-radius: 0.5rem; border: none; cursor: pointer;"
      id="submitBtn"
    >
      Richiedi Valutazione Strategica
    </button>
    
    <div id="formMessage" style="display: none; text-align: center; padding: 0.75rem; color: black;"></div>
  </form>
  
  <!-- Trust Signals -->
  <div style="margin-top: 2rem; padding-top: 1.5rem; border-top: 1px solid #e5e7eb;">
    <div style="display: flex; flex-direction: column; gap: 0.75rem; font-size: 0.875rem; color: #374151;">
      <div style="display: flex; align-items: center;">
        <svg style="height: 1rem; width: 1rem; color: #16a34a; margin-right: 0.5rem;" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span style="color: black;"><strong>Risposta garantita:</strong> Entro 4 ore lavorative</span>
      </div>
      <div style="display: flex; align-items: center;">
        <svg style="height: 1rem; width: 1rem; color: #16a34a; margin-right: 0.5rem;" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
        </svg>
        <span style="color: black;"><strong>Linea diretta:</strong> +39 02 1234 5678</span>
      </div>
      <div style="display: flex; align-items: center;">
        <svg style="height: 1rem; width: 1rem; color: #16a34a; margin-right: 0.5rem;" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
        </svg>
        <span style="color: black;"><strong>Confidenzialità:</strong> NDA standard corporate</span>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('contactForm');
    const submitBtn = document.getElementById('submitBtn');
    const messageDiv = document.getElementById('formMessage');
    
    form.addEventListener('submit', async function(e) {
      e.preventDefault();
      
      // Disable submit button
      submitBtn.disabled = true;
      submitBtn.textContent = 'INVIO IN CORSO...';
      
      // Hide previous messages
      messageDiv.classList.add('hidden');
      
      try {
        const formData = new FormData(form);
        
        const response = await fetch('/api/contact', {
          method: 'POST',
          body: formData
        });
        
        const result = await response.json();
        
        if (result.success) {
          // Success message
          messageDiv.className = 'text-center p-3 rounded-lg bg-green-100 text-green-800';
          messageDiv.textContent = result.message;
          messageDiv.classList.remove('hidden');
          
          // Reset form
          form.reset();
          
          // Track conversion event
          if (typeof gtag !== 'undefined') {
            gtag('event', 'conversion', {
              send_to: 'AW-CONVERSION_ID/CONVERSION_LABEL'
            });
          }
          
          // Optional: Redirect to thank you page
          setTimeout(() => {
            window.location.href = '/grazie';
          }, 2000);
          
        } else {
          // Error message
          messageDiv.className = 'text-center p-3 rounded-lg bg-red-100 text-red-800';
          messageDiv.textContent = result.message;
          messageDiv.classList.remove('hidden');
        }
        
      } catch (error) {
        console.error('Form submission error:', error);
        messageDiv.className = 'text-center p-3 rounded-lg bg-red-100 text-red-800';
        messageDiv.textContent = 'Errore di connessione. Riprova più tardi.';
        messageDiv.classList.remove('hidden');
      }
      
      // Re-enable submit button
      submitBtn.disabled = false;
      submitBtn.textContent = 'RICHIEDI CONSULENZA GRATUITA';
    });
    
    // Phone number formatting
    const phoneInput = document.querySelector('input[name="telefono"]');
    phoneInput.addEventListener('input', function(e) {
      let value = e.target.value.replace(/\D/g, '');
      if (value.length > 0) {
        value = '+39 ' + value;
      }
      e.target.value = value;
    });
    
    // Form analytics tracking
    const inputs = form.querySelectorAll('input, select, textarea');
    inputs.forEach(input => {
      input.addEventListener('focus', function() {
        if (typeof gtag !== 'undefined') {
          gtag('event', 'form_start', {
            'event_category': 'engagement',
            'event_label': 'patent_box_form'
          });
        }
      });
    });
  });
</script>