---
// Executive Contact Form Component - Corporate Grade
---

<div class="bg-white rounded-2xl shadow-lg border border-gray-200 p-8 text-gray-900 max-w-lg mx-auto">
  
  <!-- Form Header -->
  <div class="mb-8">
    <div class="inline-flex items-center px-3 py-1 bg-blue-50 text-blue-700 text-xs font-medium tracking-wide uppercase border border-blue-200 rounded-full mb-4">
      Valutazione Strategica
    </div>
    <h3 class="text-xl font-semibold text-gray-900 mb-2">Richiedi Consulenza Patent Box</h3>
    <p class="text-sm text-gray-600">Riservato a CFO, Tax Directors e C-Level aziende >€50M fatturato</p>
  </div>
  
  <form id="contactForm" class="space-y-6">
    <!-- Executive Details -->
    <div class="grid grid-cols-2 gap-4">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Nome *</label>
        <input 
          type="text" 
          name="nome"
          required 
          class="w-full px-4 py-3 border border-neutral-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 bg-white transition-all duration-200" 
        />
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Cognome *</label>
        <input 
          type="text" 
          name="cognome"
          required 
          class="w-full px-4 py-3 border border-neutral-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 bg-white transition-all duration-200" 
        />
      </div>
    </div>
    
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-2">Email Aziendale *</label>
      <input 
        type="email" 
        name="email"
        required 
        class="w-full px-4 py-3 border border-neutral-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 bg-white transition-all duration-200" 
      />
    </div>
    
    <div class="grid grid-cols-2 gap-4">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Azienda *</label>
        <input 
          type="text" 
          name="azienda"
          required 
          class="w-full px-4 py-3 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 bg-white transition-all duration-200" 
        />
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Ruolo *</label>
        <select 
          name="ruolo"
          required 
          class="w-full px-4 py-3 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 bg-white transition-all duration-200"
        >
          <option value="">Seleziona ruolo</option>
          <option value="cfo">CFO</option>
          <option value="tax-director">Tax Director</option>
          <option value="ceo">CEO</option>
          <option value="finance-director">Finance Director</option>
          <option value="altro-c-level">Altro C-Level</option>
        </select>
      </div>
    </div>
    
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-2">Fatturato Annuo *</label>
      <select 
        name="fatturato"
        required 
        class="w-full px-4 py-3 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 bg-white transition-all duration-200"
      >
        <option value="">Seleziona fatturato</option>
        <option value="50m-100m">€50M - €100M</option>
        <option value="100m-250m">€100M - €250M</option>
        <option value="250m-500m">€250M - €500M</option>
        <option value="500m-1b">€500M - €1B</option>
        <option value="1b+">Oltre €1B</option>
      </select>
    </div>
    
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-2">Asset Immateriali Rilevanti</label>
      <textarea 
        name="descrizione"
        placeholder="Descrivi brevemente: software proprietari, brevetti, design registrati, marchi..." 
        class="w-full px-4 py-3 border border-gray-300 rounded-lg text-sm h-24 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 bg-white transition-all duration-200"
      ></textarea>
    </div>
    
    <!-- Regulatory Notice -->
    <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
      <div class="flex items-start">
        <svg class="h-4 w-4 text-blue-600 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
        </svg>
        <div class="text-sm text-blue-800">
          <strong>Scadenza istanza:</strong> 29 gennaio 2025 - D.L. 50/2017
        </div>
      </div>
    </div>
    
    <div class="text-xs text-neutral-600">
      <label class="flex items-start">
        <input 
          type="checkbox" 
          name="privacy"
          required 
          class="mt-1 mr-2 rounded" 
        />
        <span>Accetto la <a href="/privacy" class="text-blue-600 underline font-medium hover:text-blue-700 transition-colors">Privacy Policy</a> e autorizzo il trattamento dei dati per finalità di consulenza fiscale specializzata.</span>
      </label>
    </div>
    
    <button 
      type="submit" 
      class="w-full bg-blue-600 text-white py-4 text-sm font-medium hover:bg-blue-700 transition-all duration-200 rounded-lg disabled:opacity-50 disabled:cursor-not-allowed"
      id="submitBtn"
    >
      Richiedi Valutazione Strategica
    </button>
    
    <div id="formMessage" class="hidden text-center p-3"></div>
  </form>
  
  <!-- Trust Signals -->
  <div class="mt-8 pt-6 border-t border-gray-200">
    <div class="space-y-3 text-sm text-gray-600">
      <div class="flex items-center">
        <svg class="h-4 w-4 text-green-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span><strong>Risposta garantita:</strong> Entro 4 ore lavorative</span>
      </div>
      <div class="flex items-center">
        <svg class="h-4 w-4 text-green-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
        </svg>
        <span><strong>Linea diretta:</strong> +39 02 1234 5678</span>
      </div>
      <div class="flex items-center">
        <svg class="h-4 w-4 text-green-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
        </svg>
        <span><strong>Confidenzialità:</strong> NDA standard corporate</span>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('contactForm');
    const submitBtn = document.getElementById('submitBtn');
    const messageDiv = document.getElementById('formMessage');
    
    form.addEventListener('submit', async function(e) {
      e.preventDefault();
      
      // Disable submit button
      submitBtn.disabled = true;
      submitBtn.textContent = 'INVIO IN CORSO...';
      
      // Hide previous messages
      messageDiv.classList.add('hidden');
      
      try {
        const formData = new FormData(form);
        
        const response = await fetch('/api/contact', {
          method: 'POST',
          body: formData
        });
        
        const result = await response.json();
        
        if (result.success) {
          // Success message
          messageDiv.className = 'text-center p-3 rounded-lg bg-green-100 text-green-800';
          messageDiv.textContent = result.message;
          messageDiv.classList.remove('hidden');
          
          // Reset form
          form.reset();
          
          // Track conversion event
          if (typeof gtag !== 'undefined') {
            gtag('event', 'conversion', {
              send_to: 'AW-CONVERSION_ID/CONVERSION_LABEL'
            });
          }
          
          // Optional: Redirect to thank you page
          setTimeout(() => {
            window.location.href = '/grazie';
          }, 2000);
          
        } else {
          // Error message
          messageDiv.className = 'text-center p-3 rounded-lg bg-red-100 text-red-800';
          messageDiv.textContent = result.message;
          messageDiv.classList.remove('hidden');
        }
        
      } catch (error) {
        console.error('Form submission error:', error);
        messageDiv.className = 'text-center p-3 rounded-lg bg-red-100 text-red-800';
        messageDiv.textContent = 'Errore di connessione. Riprova più tardi.';
        messageDiv.classList.remove('hidden');
      }
      
      // Re-enable submit button
      submitBtn.disabled = false;
      submitBtn.textContent = 'RICHIEDI CONSULENZA GRATUITA';
    });
    
    // Phone number formatting
    const phoneInput = document.querySelector('input[name="telefono"]');
    phoneInput.addEventListener('input', function(e) {
      let value = e.target.value.replace(/\D/g, '');
      if (value.length > 0) {
        value = '+39 ' + value;
      }
      e.target.value = value;
    });
    
    // Form analytics tracking
    const inputs = form.querySelectorAll('input, select, textarea');
    inputs.forEach(input => {
      input.addEventListener('focus', function() {
        if (typeof gtag !== 'undefined') {
          gtag('event', 'form_start', {
            'event_category': 'engagement',
            'event_label': 'patent_box_form'
          });
        }
      });
    });
  });
</script>