					let isValid = true;
					
					requiredFields.forEach(field => {
						if (!field.value.trim()) {
							isValid = false;
							field.classList.add('ring-2', 'ring-red-500', 'border-red-500');
							field.classList.remove('ring-corporate-blue-500');
						} else {
							field.classList.remove('ring-red-500', 'border-red-500');
						}
					});

					if (isValid) {
						const submitBtn = this.querySelector('button[type="submit"]');
						const originalText = submitBtn.innerHTML;
						
						submitBtn.innerHTML = `
							<svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
								<circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
								<path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
							</svg>
							Invio in corso...
						`;
						submitBtn.disabled = true;
						submitBtn.classList.add('opacity-75', 'cursor-not-allowed');
						
						setTimeout(() => {
							alert('Grazie per la richiesta. Un nostro senior partner la contatterà entro 24 ore per programmare l\'executive briefing.');
							this.reset();
							submitBtn.innerHTML = originalText;
							submitBtn.disabled = false;
							submitBtn.classList.remove('opacity-75', 'cursor-not-allowed');
						}, 2000);
					} else {
						// Show error message
						const errorDiv = document.createElement('div');
						errorDiv.className = 'bg-red-50 border border-red-200 rounded-xl p-4 text-red-800 text-sm mt-4';
						errorDiv.innerHTML = '⚠️ Si prega di compilare tutti i campi obbligatori.';
						
						// Remove existing error messages
						const existingError = this.querySelector('.bg-red-50');
						if (existingError) existingError.remove();
						
						this.appendChild(errorDiv);
						
						// Auto remove after 5 seconds
						setTimeout(() => {
							if (errorDiv.parentNode) {
								errorDiv.remove();
							}
						}, 5000);
					}
				});
			}

			// Add scroll effects
			window.addEventListener('scroll', () => {
				const header = document.querySelector('header');
				if (window.scrollY > 100) {
					header.classList.add('shadow-premium-lg');
				} else {
					header.classList.remove('shadow-premium-lg');
				}
			});

			// Add loading animation on page load
			document.addEventListener('DOMContentLoaded', function() {
				document.body.classList.add('animate-fade-in');
			});
		</script>

